@model Book
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <div class="card border-primary mb-3 h-100">
        <div class="card-body">
            <div class="row">
                <div class="col-3">
                    <img src="@Model.CoverPicturePath" style="width: 200px;" />
                </div>
                <div class="col-9">
                    <h3>@Model.Title</h3>
                    <h5>@Model.Author</h5>
                    <h5>@Model.PublishDate</h5>
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>

